############################
# DaoChain core config
############################

# WebSocket + HTTP endpoints from polkadot-omni-node
DAOCHAIN_WS_URL=ws://127.0.0.1:9944
DAOCHAIN_HTTP_URL=http://127.0.0.1:9933

# On-chain identities (dev SURI seeds)
DAOCHAIN_ADMIN_SEED=//Alice
DAOCHAIN_TALLY_SEED=//Alice
DAOCHAIN_VOTER_SEEDS=//Bob,//Charlie,//Dave

# Plaintext votes (same length as VOTER_SEEDS)
DAOCHAIN_VOTER_VOTES=ALICE,BOB,ALICE

# Election configuration
DAOCHAIN_ELECTION_ID=1
DAOCHAIN_REG_DEADLINE_OFFSET=20
DAOCHAIN_VOTE_DEADLINE_OFFSET=40

############################
# Mix-node chain (ballot mix)
############################

# HTTP endpoints of ballot mix-nodes
MIX_NODE_URLS=http://127.0.0.1:4001,http://127.0.0.1:4002

# X25519 node public keys (from mix-node logs) in the same order
MIX_NODE_PUBLIC_KEYS=0x...node1_x25519_pk,0x...node2_x25519_pk

# Optional sharding config
DAOMIX_SHARD_COUNT=3

############################
# Transport mix (JSON-RPC path)
############################

# Toggle transport mixing
DAOCHAIN_TRANSPORT_ENABLED=false

# Entry node URL
DAOCHAIN_TRANSPORT_ENTRY_URL=http://127.0.0.1:9100

# Transport node URLs (entry,middle,exit) - same order as PUBKEYS
DAOCHAIN_TRANSPORT_NODE_URLS=http://127.0.0.1:9100,http://127.0.0.1:9101,http://127.0.0.1:9102

# X25519 public keys for transport nodes
DAOCHAIN_TRANSPORT_NODE_PUBKEYS=0x...entry_pk,0x...middle_pk,0x...exit_pk

# Optional: sender secret key used for transport onion (hex)
DAOCHAIN_TRANSPORT_SENDER_SK=0x...sender_x25519_sk

############################
# Optional: Hybrid PQ mode
############################

# Toggle PQ/hybrid
DAOMIX_PQ_ENABLED=false

# PQ public keys for ballot mix-nodes (hex; same order as MIX_NODE_URLS)
MIX_NODE_PQ_PUBLIC_KEYS=0x...node1_pq_pk,0x...node2_pq_pk

# PQ public keys for transport nodes (same order as DAOCHAIN_TRANSPORT_NODE_URLS)
DAOCHAIN_TRANSPORT_NODE_PQ_PUBKEYS=0x...entry_pq_pk,0x...middle_pq_pk,0x...exit_pq_pk

# On each transport node process only:
#   TRANSPORT_PQ_SECRET_KEY=0x...node_pq_sk
