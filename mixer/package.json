{
  "name": "@polokol/mixer",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "test:daochain-e2e": "vitest run test/daochain.e2e.test.ts",
    "dev:mix-node": "TS_NODE_FILES=true ts-node src/mixNodeServer.ts",
    "dev:transport-node": "TS_NODE_FILES=true ts-node src/transportNodeServer.ts",
    "run:transport-rpc": "TS_NODE_FILES=true ts-node src/runTransportRpc.ts",
    "run:daochain-pipeline-transport": "TS_NODE_FILES=true ts-node src/runDaoMixDaoChain.ts",
    "demo:orchestrator": "TS_NODE_FILES=true ts-node src/orchestratorDemo.ts",
    "demo:cast-ballots": "TS_NODE_FILES=true ts-node src/castOnionBallotsDemo.ts",
    "run:daochain-pipeline": "TS_NODE_FILES=true ts-node src/runDaoMixDaoChain.ts",
    "debug:system-remark": "ts-node --transpile-only src/debugSystemRemark.ts",
    "inspect:runtime": "ts-node --transpile-only src/inspectRuntime.ts",
    "demo:ws-proxies": "TS_NODE_FILES=true ts-node src/wsProxyLauncher.ts",
    "dev:mix-orchestrator": "TS_NODE_FILES=true ts-node src/mixJobOrchestratorRunner.ts",
    "generate-keys": "TS_NODE_FILES=true ts-node src/generateKeys.ts"
  },
  "dependencies": {
    "@polkadot/api": "^10.12.1",
    "@polkadot/keyring": "^12.6.2",
    "axios": "^1.7.0",
    "crystals-kyber-js": "^2.5.0",
    "dotenv": "^16.4.0",
    "ethers": "^6.13.0",
    "express": "^4.19.0",
    "keccak256": "^1.0.6",
    "libsodium-wrappers": "^0.7.13",
    "merkletreejs": "^0.3.9",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}
