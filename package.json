{
  "name": "polokol-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Polokol = Polkadot SDK DAO chain + DotMix mixer stack",
  "workspaces": [
    "mixnode",
    "sdk",
    "dapp",
    "polokol-chain",
    "contracts"
  ],
  "scripts": {
    "dev": "pnpm --parallel --filter \"@polokol/mixnode\" --filter \"@polokol/dapp\" run dev",
    "dev:mixnode": "pnpm --filter @polokol/mixnode dev",
    "dev:dapp": "pnpm --filter @polokol/dapp dev",
    "build": "pnpm -r build",
    "build:sdk": "pnpm --filter @polokol/dotmix-provider build",
    "test": "pnpm -r test --if-present"
  },
  "packageManager": "pnpm@8.0.0"
}
